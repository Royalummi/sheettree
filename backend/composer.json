{
  "name": "sheettree/api",
  "description": "Google Sheets Integration API using Slim Framework",
  "type": "project",
  "config": {
    "process-timeout": 0
  },
  "require": {
    "php": "^8.0",
    "slim/slim": "^4.12",
    "slim/psr7": "^1.6",
    "php-di/php-di": "^7.0",
    "google/apiclient": "^2.15",
    "firebase/php-jwt": "^6.10",
    "vlucas/phpdotenv": "^5.5",
    "illuminate/database": "^10.0",
    "ramsey/uuid": "^4.7",
    "respect/validation": "^2.2"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "start": "php -S localhost:8000 -t public",
    "test": "phpunit",
    "serve": "php -S localhost:8000 -t public",
    "dev": "php -S localhost:8000 -t public",
    "start-win": "php -S localhost:8000 -t public",
    "start-server": "@php -S localhost:8000 -t public"
  }
}
